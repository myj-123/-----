.home {
  width: 100%;
  height: 100%;
}

.home .home_banner {
  width: 750rpx;
  height: 300rpx;
}

.home .home_banner .banner {
  width: 750rpx;
  height: 300rpx;
}

.home .home_recommend {
  width: 750rpx;
  height: 164rpx;
  /* 开启弹性盒子:如何水平、垂直居中 */
  display: flex;
}

.home .home_recommend .item {
  /* 代表每个容器分到剩余空间一份 ，总共五份 */
  flex: 1;
  /* 开启弹性盒 */
  display: flex;
  /* 项目的排列方式 */
  flex-direction: column;
  /* 水平居中 很重要 */
  justify-content: center;
  /* 垂直居中*/
  align-items: center;

}

.home .home_recommend .item .icon {
  width: 100rpx;
  height: 100rpx;
  background: #d43c33;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 48rpx;
}

.home .home_recommend .item .title {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.home .home_music {
  width: 750rpx;
  padding: 20rpx;
}

.home .home_music .top {
  color: #ccc;
}

.home .home_music .bottom {
  display: flex;
  /* 水平对齐方式 */
  justify-content: space-between;
  /* 垂直轴对齐方式 */
  align-items: center;
  margin-top: 10rpx;
}

/* 默认button组件有默认margin 90px|padding 14px */
.home .home_music .bottom button {
  margin: 0;
  padding: 0;
  width: 160rpx;
  height: 60rpx;
  border-radius: 40rpx;
  border: 2rpx solid black;
  font-size: 24rpx;
  margin: 0rpx 40rpx;
}

/*推荐歌曲滚动视图样式*/
.home .home_scroll_music {
  display: flex;
  width: 750rpx;
  height: 300rpx;
}

.home .home_scroll_music .img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.home .home_scroll_music .item {
  margin: 0px 10rpx;
}

.home .home_scroll_music .item .title {
  font-size: 24rpx;
  width: 200rpx;
  height: 68rpx;
  /* 设置自多两行，超出部分... */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}